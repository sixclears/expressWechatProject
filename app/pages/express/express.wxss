page {  
  min-height: 100%;  
  background-color:#f6f6f6;
  font-family: "微软雅黑";
  font-size: 30rpx;
  color:#353535;
  width:100%;
} 
.section{
	background-color: #fff;
}
.item{
	display: flex;
	justify-content: space-between;
	margin-left:30rpx;
	padding:5rpx 30rpx 5rpx 0;
	line-height:90rpx;
	border-bottom:1rpx solid #e0e0e0;
}
.addre1{
	margin-left:30rpx;
    display: flex;
    justify-content: space-between;
    padding-top:30rpx;
	line-height:100rpx;
}
.addre2{
   line-height:60rpx;
   font-size:27rpx;
}
.addre2 .left{
	display: flex;
	flex-direction: column;
	width:90%;
}
.addre2 .left .area{
	float:right;
}
.addre2 .left_bottom{
	padding-left:40rpx;
	color:#888;
}
.left_top image{
	padding-top:10rpx;
	margin-right:10rpx;
}
.more{
  width:25rpx;
  float:right;
  margin-right:20rpx;
  padding-top:40rpx;
}
 image{
	width:30rpx;
}
.line image{
	width:100%;
	height:20rpx;
}
.red{
	color:#e64340;
}
.gray{
	color:#939393;
}
.right{
	display:flex;
}
textarea{
	border: 1rpx solid #e0e0e0;
	border-radius: 5rpx;
    width:96%;
}
.mark{
	background-color: #fff;
	padding:15rpx 0 15rpx 42rpx;
	line-height:80rpx;
}
.submit{
  background-color: #EF6262;
  color:#fff;
  position: absolute;
  bottom: 0;
  width:100%;
}
.step_top{
  width: 100%;
  height: 88rpx;
  margin: auto;
  display: flex;
  justify-content: space-between;
  position: relative;
}
.flag{
  position: absolute;
  width: 148rpx;
  height: 46rpx;
  font-size: 26rpx;
  line-height: 46rpx;
  color: #ffffff;
  text-align: center;
  background: #EF6262;
  border-top-right-radius: 23rpx;
  border-bottom-right-radius: 23rpx;
  top:22rpx;
  left: 0;
}
.dian{
  width: 148rpx;
  height: 46rpx;
  float: left;
}
.stepMain{
  width: 92%;
  height: 88rpx;
  margin: auto;
  border-bottom: 2rpx solid #e6e6e6;
  line-height: 88rpx;
}
.step2{
  width: 94%;
  height: 222rpx;
  margin: 16rpx auto 0;
  background: #ffffff;
  border-radius: 8rpx;
}