  line-height: 88rpx;
}
.describe{
  width: 130rpx;
  font-size: 30rpx;
  color: #3d4663;
  font-weight: bold;
  float: left;
}
.sum{
  float: right;
  font-size: 22rpx;
  color: #999999;
}
.money{
  font-size: 26rpx;
