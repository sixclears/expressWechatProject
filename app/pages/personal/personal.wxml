<scroll-view scroll-y class="scrollPage">
  <view class="UCenter-bg shadow-warp">
    <image src="{{userInfo.avatarUrl}}"></image>
    <view class="text-xl">{{userInfo.nickName}}</view>
  </view>
  <view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg radius">
    <view class="cu-item arrow">
      <navigator class="content Tcenter" url="/pages/myexpress/myexpress" hover-class="none">
        <text class="iconfont icon-kuaidi text-grey"></text>
        <text class="text-grey">我的快递</text>
      </navigator>
    </view>
    <view class="cu-item arrow">
      <navigator class="content Tcenter" url="/pages/personal/daina/daina" hover-class="none">
        <text class="iconfont icon-qishou text-grey"></text>
        <text class="text-grey">帮拿快递</text>
      </navigator>
    </view>
    <view class="cu-item arrow">
      <navigator class="content Tcenter" url="/pages/personal/myorder/myorder" hover-class="none">
        <text class="iconfont icon-qishou text-grey"></text>
        <text class="text-grey">我的代拿订单</text>
      </navigator>
    </view>

    <view class="cu-item arrow">
      <navigator class="content Tcenter" url="/pages/personal/address/address" hover-class="none">
        <text class="cuIcon-formfill text-green"></text>
        <text class="text-grey">我的地址</text>
      </navigator>
    </view>
  </view>
  <view class="cu-tabbar-height"></view>
</scroll-view>


