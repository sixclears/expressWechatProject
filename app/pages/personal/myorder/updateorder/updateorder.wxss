page{
 background: #ededed;
}
.editInfo{
  width: 94%;
  height: 130rpx;
  margin: 16rpx auto 0;
  background: #ffffff;
  border-radius: 8rpx;
  display: flex;
  justify-content: space-between
}
.editInfo_left{
  width: 86%;
  height: 130rpx;
  display: flex;
}
.bianhao{
  width: 80%;
  height: 32rpx;
  margin-top: 28rpx;
}
.numPic{
  width: 130rpx;
  height: 90rpx;
  margin:22rpx 14rpx 0 28rpx;
}
.num{
  font-size: 32rpx;
  font-weight: bold;
  color: #3d4663;
  line-height: 32rpx;
}
.time{
  width: 80%;
  height: 24rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  color: #999999;
  margin:18rpx 0 0 0
}
.editInfo_right{
  width: 142rpx;
  height: 54rpx;
  background: #3d4663;
  font-size: 26rpx;
  line-height: 54rpx;
  text-align: center;
  color: #ffffff;
  border-top-left-radius: 27rpx;
  border-bottom-left-radius: 27rpx;
  margin-top: 32rpx;
}
.remarks{
  width: 94%;
  height: auto;
  margin: 16rpx auto 0;
  background: #ffffff;
  border-radius: 8rpx;
  padding-bottom: 10rpx;
}
.remarks_info{
  padding:26rpx 24rpx 30rpx 24rpx;
  font-size: 24rpx;
  line-height: 36rpx;
  color: #999999;
  margin: auto;
}
.remarks_top{
  width: 92%;
  height: 86rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin:auto;
  line-height: 86rpx;
  border-bottom: 2rpx solid #e6e6e6;
  color:#333333; 
  display: flex;
  justify-content: space-between
}
.list,.lists{
  width: 92%;
  margin: auto;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  justify-content: space-between;
}
.lists{
  border-bottom: 2rpx solid #e6e6e6
}
.list_name{
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
}
.list_items{
  font-size: 24rpx;
  display: flex;
  justify-content: space-between;
  color: #999999;
}
.list_item{
  font-size: 24rpx;
  color: #999999;
}
.inputInfo{
  width: 306rpx;
  height: 100%;
  text-align: right;
}
.inputStyle{
  color: #999999;
}
.jiantou{
  width: 18rpx;
  height: 30rpx;
  margin: 28rpx 0 0 16rpx;
}
.else{
  width: 94%;
  height: 732rpx;
  margin: 16rpx auto 0;
  background: #ffffff;
  border-radius: 8rpx;
}
.editPic{
  width: 29rpx;
  height: 32rpx;
  margin: 28rpx 0 0 16rpx;
}
.confirm{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 98rpx;
  border-top: 2rpx solid #cccccc;
  margin-top: 176rpx;
  background: #ffffff;
}
.confirmBtn{
  width: 160rpx;
  height: 52rpx;
  font-size: 26rpx;
  line-height: 52rpx;
  display: block;
  /* border:2rpx solid #e6e6e6; */
  border-radius: 26rpx;
  float: right;
  margin: 22rpx 24rpx 0 0;
  text-align: center;
  color: #999999;
}
.confirmBtn::after{
  border:none;
  border:2rpx solid #e6e6e6;
}
.rexian{
  width: 100%;
  height: 88rpx;
  bottom: 98rpx;
  left: 0
}
.tels{
  width: 100%;
  height: 88rpx;
  font-size: 24rpx;
  line-height: 88rpx;
  text-align: center;
  color: #666666
}
.kefu{
  width: 200rpx;
  height: 54rpx;
  background: #aaaaaa;
  border-top-left-radius: 27rpx;
  border-bottom-left-radius: 27rpx;
  position: fixed;
  bottom:118rpx;
  right: 0;
  display: flex;
  justify-content: space-around
}
.kufu_pic{
  width: 32rpx;
  height: 34rpx;
  display: block;
  margin: 10rpx 0 0 26rpx;
}
.kefu_describe{
  width: 102rpx;
  height: 54rpx;
  font-size: 24rpx;
  line-height: 54rpx;
  color:#ededed;
}